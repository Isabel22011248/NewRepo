@model ejemplo.Models.ViewModels.EmpleadoVM
@{
    ViewData["Title"] = "Empleado_Detalle";
    Layout = "~/Views/shared/_layout.cshtml";
}

@if (Model.oEmpleado.IdEmpleado == 0)
{
    <h1>Crear Empleado</h1>
}
else
{
    <h1>Editar Empleado</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Empleado_Detalle" asp-controller="ejemplo" method="post">
            <input type="hidden" asp-for="oEmpleado.IdEmpleado" />
            <!-- Campo de entrada oculto para enviar el IdEmpleado al controlador -->

            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.NombreCompleto">Nombre completo</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.NombreCompleto" type="text" />
                <!-- Campo de entrada para el nombre completo del empleado -->
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.Correo">Correo</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.Correo" type="text" />
                <!-- Campo de entrada para el correo del empleado -->
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.Telefono">Telefono</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.Telefono" type="text" />
                <!-- Campo de entrada para el teléfono del empleado -->
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oEmpleado.IdCargo">Cargo</label>
                <select class="form-select form-select-sm" asp-for="oEmpleado.IdCargo" asp-items="@Model.oCargo">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
                <!-- Lista desplegable para seleccionar el cargo del empleado -->
            </div>

            <div class="mb-2">
                @if (Model.oEmpleado.IdEmpleado == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                    <!-- Botón para enviar el formulario y crear un nuevo empleado -->
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                    <!-- Botón para enviar el formulario y actualizar los datos del empleado existente -->
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
                <!-- Enlace para volver a la página principal -->
            </div>
        </form>
    </div>
</div>